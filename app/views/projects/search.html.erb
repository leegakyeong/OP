<h1>Results</h1>
<% @results.reverse.each_with_index do |r, i| %>
  <div class="ui segment result" <% if i > 3 %> style="display: none;" <% end %>>
    <div>제목: <%= highlight r.title, @keyword %></div>
    <div>책임자: <%= highlight r.admin.name, @admin %></div>
    <div>상세설명: <%= highlight r.description, @keyword %></div>
    <div>태그: <%= highlight r.tag_string, @keyword %></div>
    <% if !@isOnline.nil? %>
      <p>협업 방식:
        <% if @isOnline %>
            재택/온라인
        <% else %>
            오프라인 모임
        <% end %></p>
    <% end %>
    <% if !@isKorean.nil? %>
      <p>사용 언어:
        <% if @isKorean %>
            한국어
        <% else %>
            English
        <% end %></p>
    <% end %>
    <% if @skills != [] %>
      <div>필요한 스킬: <%= highlight r.skills, @skills %></div>
    <% end %>
    <% if @tools != [] %>
      <div>도구: <%= highlight r.tools, @tools %></div>
    <% end %>
    <% if @isClosed %>
      <div>마감 여부: 마감</div>
    <% end %>
    <%= link_to "상세보기", r %>
  </div>
<% end %>
<!-- <div class="fluid ui button" id="show-results">전체보기</div> -->
<p><%= link_to '메인 화면으로', projects_url %></p>

<script>
  $(document).ready(function() {
    $("#show-results").click(function() {
      $(".result").show();
      $(this).hide();
    })
  })
</script>